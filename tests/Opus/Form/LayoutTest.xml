<formlayout name="general" xmlns="http://schemas.opus.org/formlayout"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<!-- General hints on the publication process. Documenttype and licence selection.   -->
	<page name="publish">
		<field name="document_type" />
		<field name="licences_id" />
		<field name="language" />
	</page>

	<!-- Title and creator data -->
	<page name="document">

		<!-- persons -->
		<group name="persons">
			<field name="person_author" />
			<field name="person_advisor" />
			<field name="person_referee" />
			<field name="person_other" />
		</group>

		<!-- institutions -->
		<group name="institutions">
			<field name="institute" />
			<field name="non_institute_affiliation" />
		</group>

		<!-- titles -->
		<group name="titles">
			<field name="title_main" />
			<field name="title_abstract" />
		</group>

	</page>


	<!-- Dates, subjects and classifications -->
	<page name="content">

		<!-- dates -->
		<group name="dates">
			<field name="completed_date" />
			<field name="completed_year" />
			<field name="published_date" />
			<field name="published_year" />
			<field name="date_accepted" />
		</group>
		<!-- subjects -->
		<group name="subjects">
			<field name="subject_swd" />
			<field name="subject_ddc" />
			<field name="subject_uncontrolled" />
		</group>
	</page>


	<!-- Identifiers and collections -->
	<page name="collections">

		<!-- identifiers -->
		<group name="identifiers">
			<field name="identifier_isbn" />
		</group>

		<!-- collections -->
		<group name="collections">
			<field name="collection_title" />
			<field name="collection_sequence_nr" />
			<field name="title_parent" />
		</group>

	</page>

</formlayout>
