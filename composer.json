{
  "name": "opus4-repo/framework",
  "description": "Framework for Opus 4",
  "license": "GPL-2.0+",
  "type": "library",
  "keywords": [
    "opus4",
    "framework"
  ],
  "homepage": "http://opus4.kobv.de",
  "require": {
    "zendframework/zendframework1": "1.12.*",
    "solarium/solarium": "3.4.*",
    "opus4-repo/opus4-doi": "4.6.2"
  },
  "autoload": {
    "psr-0": {
      "Opus_": "library/"
    }
  },
  "include-path": [
    "library/"
  ],
  "require-dev": {
    "phpunit/phpunit": "4.8.24",
    "phpunit/dbunit": "~1.3",
    "behat/behat": "3.3.*",
    "phpunit/php-invoker": "~1.1",
    "phpunit/phpunit-selenium": "1.4.2",
    "doctrine/instantiator": "1.0.5",
    "phploc/phploc": "*",
    "phpmd/phpmd" : "2.4.3",
    "sebastian/phpcpd": "*",
    "mayflower/php-codebrowser": "~1.1",
    "squizlabs/php_codesniffer": "3.*",
    "opus4-repo/codesniffer": "dev-master"
  },
  "archive": {
    "exclude": ["/tests", "/nbproject"]
  }
}
