{
  "name": "opus4/framework",
  "description": "Framework for Opus 4",
  "license": "GPL-2.0+",
  "type": "library",
  "keywords": [
    "opus4",
    "framework"
  ],
  "homepage": "http://opus4.kobv.de",
  "require": {
    "zendframework/zendframework1": "1.12.*",
    "solarium/solarium": "3.3.*"
  },
  "autoload": {
    "psr-0": {
      "Opus_": "library/"
    }
  },
  "include-path": [
    "library/"
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "4.4.6-dev"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "4.2.*",
    "phpunit/dbunit": "1.3.*",
    "phpunit/phpunit-story": "1.0.*",
    "phpunit/php-invoker": "1.1.*",
    "ocramius/instantiator": "1.1.4"
  },
  "archive": {
    "exclude": ["/tests", "/nbproject"]
  }
}
