<schema targetNamespace="http://schemas.opus.org/documenttype"
	elementFormDefault="qualified" xmlns="http://www.w3.org/2001/XMLSchema"
	xmlns:opus="http://schemas.opus.org/documenttype">

	<element name="documenttype" type="opus:OpusDocumentType" />

	<complexType name="OpusDocumentType">
		<sequence>
			<element name="field" type="opus:FieldType"></element>
			<element name="mandatory" type="opus:Mandatory" />
		</sequence>
	</complexType>

	<complexType name="Mandatory">
		<sequence>
			<element name="field" type="opus:FieldType" />
		</sequence>
		<attribute name="type">
			<simpleType>
				<restriction base="string">
					<enumeration value="all" />
					<enumeration value="one-at-least" />
					<enumeration value="single" />
				</restriction>
			</simpleType>
		</attribute>
	</complexType>

	<complexType name="FieldType">
		<attribute name="name" type="opus:validfieldname"/>
		<attribute name="multiplicity" type="opus:multiplicity" />
		<attribute name="languageoption" type="opus:onoff" />
		<attribute name="mandatory" type="opus:yesno" />
	</complexType>

	<simpleType name="multiplicity">
		<restriction base="string">
			<pattern value="([0-9][1-9]*)|\*" />
		</restriction>
	</simpleType>

	<simpleType name="yesno">
		<restriction base="string">
			<enumeration value="yes" />
			<enumeration value="no" />
		</restriction>
	</simpleType>

	<simpleType name="onoff">
		<restriction base="string">
			<enumeration value="on" />
			<enumeration value="off" />
		</restriction>
	</simpleType>
	
	<simpleType name="validfieldname">
		<restriction base="string">
<!--			<pattern value="^[a-z]*(_[a-z]*)*" />-->
            <pattern value="[a-z]+[a-z0-9]*(_[a-z0-9]+)*" />
		</restriction>
	</simpleType>

</schema>